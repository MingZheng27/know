<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarStyle">@style/myActionbarsytle</item>  <!--这样引用ationbar的style,但是已经去掉了ationbar所以无效，这个只能设置系统默认的ationbar-->
    </style>
    <style name="myActionbarsytle" parent="android:Widget.ActionBar.TabBar">
        <item name="android:background">@color/colorb</item>
    </style>


</resources>
